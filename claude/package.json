{
  "name": "govsnap",
  "version": "1.0.0",
  "description": "GovSnap - GOV.UK Journey Documentation Tool",
  "private": true,
  "main": "dist-electron/main/main.js",
  "scripts": {
    "main:build": "tsc -p tsconfig.main.json",
    "main:dev": "tsc -p tsconfig.main.json --watch",
    "renderer:dev": "vite",
    "dev": "concurrently \"npm run main:dev\" \"npm run renderer:dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "npm run main:build && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "playwright": "^1.57.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.3.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "sass": "^1.83.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1"
  }
}
